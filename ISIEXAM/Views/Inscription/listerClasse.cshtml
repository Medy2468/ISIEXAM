@model PagedList.IPagedList<ISIEXAM.Models.CLasseViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "lister Etudiant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>listerClasse</h2>

<p>
    @Html.ActionLink("Create New", "create")
</p>

@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <div class="form-group">
            @Html.Label("Nom", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Nom", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Prenom", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Prenom", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Telephone", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Telephone", new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Rechercher" class="btn btn-default" />
            </div>
        </div>

    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().NomEtudiant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().PrenomEtudiant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().AdresseEtudiant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().EmailEtudiant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().TelEtudiant)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstOrDefault().LibelleClasse)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomEtudiant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrenomEtudiant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdresseEtudiant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailEtudiant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelEtudiant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LibelleClasse)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdEtudiant }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdEtudiant }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdEtudiant })
            </td>
        </tr>
    }

</table>

<br />
  Page @(Model.PageCount< Model.PageNumber ? 0 :  Model.PageNumber) / @Model.PageCount

  @Html.PagedListPager(Model, page => Url.Action("lister Etudiant", 
    new { page, Nom = ViewBag.Nom, Prenom = ViewBag.Prenom, Telephone = ViewBag.Telephone }))
